{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "Spring Boot - BackendApplication (F5)",
      "request": "launch",
      "mainClass": "com.example.backend.BackendApplication",
      "projectName": "backend",
      "args": "",
      "vmArgs": "-Dspring.profiles.active=dev",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "java",
      "name": "Attach to Docker (Remote Debug)",
      "request": "attach",
      "hostName": "localhost",
      "port": 5005,
      "projectName": "backend",
      "timeout": 30000,
      "sourcePaths": [
        "${workspaceFolder}/src/main/java"
      ],
      "sourcePathFilter": [
        "+com.example.backend.**"
      ]
    }
  ]
}
