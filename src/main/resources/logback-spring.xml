<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <!-- 控制台输出配置 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <charset>UTF-8</charset>
            <layout class="ch.qos.logback.classic.PatternLayout">
                <pattern>%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(%-5level){ERROR=red blink, WARN=yellow, INFO=green, DEBUG=cyan, TRACE=magenta} %clr(%logger{36}){cyan} - %msg%n</pattern>
            </layout>
        </encoder>
    </appender>
    
    <!-- 简化的控制台输出配置（用于性能日志，只显示日志级别和消息内容） -->
    <appender name="CONSOLE_SIMPLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <charset>UTF-8</charset>
            <layout class="ch.qos.logback.classic.PatternLayout">
                <pattern>%clr(%-5level){ERROR=red blink, WARN=yellow, INFO=green, DEBUG=cyan, TRACE=magenta} - %msg%n</pattern>
            </layout>
        </encoder>
    </appender>
    
    <!-- 文件输出配置 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/application-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- 开发环境配置 -->
    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
        <logger name="com.example.backend" level="DEBUG"/>
        <logger name="org.springframework.web" level="DEBUG"/>
        <logger name="org.hibernate" level="DEBUG"/>
        <logger name="com.zaxxer.hikari" level="DEBUG"/>
        <!-- p6spy SQL 日志输出（输出完整的 SQL，参数已填充） -->
        <logger name="p6spy" level="INFO"/>
        <!-- 关闭 MyBatis 默认的 SQL 输出（使用 p6spy 输出） -->
        <logger name="org.mybatis" level="WARN"/>
        <logger name="org.apache.ibatis" level="WARN"/>
        <logger name="com.baomidou.mybatisplus" level="WARN"/>
        <!-- 性能日志使用简化格式（只显示消息内容，不显示时间戳、线程等） -->
        <logger name="com.example.backend.config.WebConfig" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE_SIMPLE"/>
        </logger>
        <logger name="com.example.backend.config.SqlPerformanceInterceptor" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE_SIMPLE"/>
        </logger>
    </springProfile>
    
    <!-- 测试环境配置 -->
    <springProfile name="test">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>
    
    <!-- 生产环境配置 -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>
    
</configuration>
